{
  "name": "moti-do-v2",
  "version": "0.1.0",
  "private": true,
  "description": "A modular web application with a separate CLI backend and React frontend.",
  "scripts": {
    "dev:ui": "pnpm --filter moti-do-ui dev",
    "build:ui": "pnpm --filter moti-do-ui build",
    "build:cli": "pnpm --filter moti-do-cli build",
    "build:shared": "pnpm --filter moti-do-shared build",
    "build": "pnpm run build:shared && pnpm run build:cli && pnpm run build:ui",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "pnpm --parallel --filter '*' test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.13.14",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  },
  "packageManager": "pnpm@8.15.1"
}