{
  "name": "moti-do-v2",
  "version": "0.1.0",
  "private": true,
  "description": "A modular web application with a separate CLI backend and React frontend.",
  "scripts": {
    "dev:ui": "pnpm --filter ui dev",
    "build:ui": "pnpm --filter ui build",
    "build:cli": "pnpm --filter cli build",
    "build:shared": "pnpm --filter shared build",
    "build": "pnpm build:shared && pnpm build:cli && pnpm build:ui",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "pnpm --parallel test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "packageManager": "pnpm@8.15.1"
} 