# Moti-Do Environment Variables
# Copy this file to .env and fill in the values

# ============================================
# Database Configuration
# ============================================

# PostgreSQL connection URL (Vercel Postgres)
# Format: postgres://user:password@host:port/database
# Get this from your Vercel Postgres dashboard
# DATABASE_URL=

# ============================================
# Authentication
# ============================================

# JWT secret key for token signing
# Generate a secure random string (at least 32 characters)
# Example: openssl rand -hex 32
JWT_SECRET=dev-secret-key-change-in-production

# ============================================
# Application Settings
# ============================================

# Development mode (set to "false" in production)
# When true, authentication is bypassed
MOTIDO_DEV_MODE=true

# Python path for module imports
PYTHONPATH=src
